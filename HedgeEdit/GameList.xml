      <File type="terrainlist" arg0="Packed/Stage">#{0}/terrain.terrain</File>
			<!-- TODO -->
		</LoadInfo>
	</Game>

  <!-- Sonic Lost World -->
	<Game shortName="Lost World" name="Sonic Lost World" dataType="LW" unitMultiplier="0.1">
		<UnpackInfo>
			<!-- Misc PAC (E.G. w1a01_misc) -->
			<!-- <Archive path="{0}/{0}_misc.pac" cachePath="{0}/misc" /> -->
			<!-- Far PAC (E.G. w1a01_far) -->
			<!-- <Archive path="{0}/{0}_far.pac" cachePath="{0}/far" /> -->
			<!-- Obj PAC (E.G. w1a01_obj) -->
			<!-- <Archive path="{0}/{0}_obj.pac" cachePath="{0}/obj" /> -->
			<!-- Sky PAC (E.G. w1a01_sky) -->
			<!-- <Archive path="{0}/{0}_sky.pac" cachePath="{0}/sky" /> -->
			<!-- Trr_Cmn PAC (E.G w1a01_trr_cmn) -->
			<!-- <Archive path="{0}/{0}_trr_cmn.pac" cachePath="{0}/trr_cmn"/> -->
			
			<!-- Set Data -->
			<Files searchPattern="{0}_obj_**.orc" path="set" cachePath="set/{1}" />
			<!-- Config.lua -->
			<File path="{0}/{0}_config.lua" cachePath="{0}/{0}_config.lua" />
		</UnpackInfo>
		
		<LoadInfo>
			<Directory type="setData" filter="*.orc">set</Directory>
			<Directory type="light" filter="*.light">{0}/trr_cmn</Directory>
			
			<!-- TODO: Add filters to these directory elements -->
			<Directory type="terrain">{0}/trr_cmn|{0}/far</Directory>
			<Directory type="sky">{0}/sky</Directory>
			<Directory type="objects">{0}/obj</Directory>
			
			<File type="collision">{0}/misc/{0}_col.phy.hkx</File>
			<File type="sceneEffect">{0}/misc/{0}.hhd</File>
			<!-- <File type="pathData">{0}/misc/{0}_path.path2.bin</File> -->
		</LoadInfo>
	</Game>

  <!-- Sonic Forces -->
  <Game shortName="Forces" name="Sonic Forces" dataType="Forces" unitMultiplier="0.1">
    <UnpackInfo>
      <!-- Miscellaneous (E.G. w5a01/w5a01_misc.pac) -->
      <Archive path="{0}/{0}_misc.pac" cachePath="{0}/{0}_misc" />
      <!-- Object (E.G. w5a01/w5a01_obj.pac) -->
      <Archive path="{0}/{0}_obj.pac" cachePath="{0}/{0}_obj" />
      <!-- Sky (E.G. w5a01/w5a01_sky.pac) -->
      <Archive path="{0}/{0}_sky.pac" cachePath="{0}/{0}_sky" />
      <!-- Terrain Common (E.G. w5a01/w5a01_trr_cmn.pac) -->
      <Archive path="{0}/{0}_trr_cmn.pac" cachePath="{0}/{0}_trr_cmn"/>
      
      <!-- Terrain Blocks (E.G. w5a01/w5a01_trr_s00.pac) -->
      <Archive searchPattern="{0}_trr_s**.pac" path="{0}" cachePath="{0}/{1}" />

      <!-- Set Data (E.G. gedit/w5a01_gedit.pac) -->
      <Archive path="gedit/{0}_gedit.pac" cachePath="gedit/{0}_gedit"/>
    </UnpackInfo>

    <LoadInfo>
      <Directory type="setData" filter="*.gedit">gedit/{0}_gedit</Directory>
      <Directory type="light" filter="*.light">{0}/{0}_trr_cmn</Directory>
      <!-- TODO -->
    </LoadInfo>
  </Game>

  <!-- Sonic Colors -->
